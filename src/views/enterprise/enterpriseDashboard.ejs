<%- include("./../partials/head") %>
<body>
<%- include("./../partials/navbar")%>
  <div class="min-h-[calc(100vh-6rem)] bg-upfc-blue">
  <% if (enterpriseLogged.registered) { %>
      <div class="flex flex-col w-full items-center p-12">
        <!-- <div class="w-full">
          <strong>Account properly registered.</strong>You are all set to start minting UPF!
        </div> -->
        <form action="/enterprise/newMintingRequest" method="POST" class='flex flex-col gap-y-8 w-1/3 bg-black bg-opacity-25 rounded-xl px-12 py-8'>
          <div class='flex flex-col w-full items-center'>
            <span class='text-xl mb-4 text-white'>Nueva Aplicacion de Certificacion UPFC</span>
            <input name="name" type="text" class='p-1.5 rounded-xl bg-input-gray placeholder:font-light placeholder:text-black text-white focus:outline-none w-full' placeholder='Name' />
          </div>
          <% if (errorMessages && errorMessages.length > 0) { %>
            <div class="text-sm text-red-600 font-thin">
              <p><%= errorMessages[0].name.msg %></p>
            </div>
          <% } %>
          <button type="submit" class='bg-upfc-lime rounded-xl text-black py-1.5'>Postula el Caso a Certificar</button>
        </form>
      
      <% if (userCategory == 2) { %>
          <span class="place-self-start text-3xl font-medium">Your minting requests</span>
        <% } else{%>
          <span class="place-self-start text-3xl font-medium">Minting requests</span>
      <% } %>
      <div class='flex grid grid-cols-4 gap-x-12 mt-4 gap-y-12 w-full'>
        <% if(openMintingRequests.length>0) { %>
          <%-  include("./requests") %>
        <% } %>
      </div>

    </div>


      <% } else if(!submitedDetails){ %>
        <div class="flex gap-x-12 text-white">
          <div class="flex flex-col w-1/2 justify-center items-center">
            <div class='flex flex-col gap-y-8 w-[58%] mb-16'>
              <span class='text-4xl font-medium'>¡GRACIAS POR REGISTRARTE!</span>
              <span class="font-thin tracking-wider">
                YA ESTÁS MÁS CERCA DE TU CERTIFICACIÓN.
                AHORA TENÉS QUE COMPLETAR EL REGISTRO DE TU EMPRESA
              </span>
              <a href="/enterprise/details" class='text-lg text-black bg-upfc-lime rounded py-1.5 text-center'>Completar registro</a>
            </div>
          </div>
          <div class="w-1/2 overflow-hidden max-h-[calc(100vh-6rem)]">
            <div class="mt-12 -mr-24">
              <img class="w-full" src="/images/upfc-bg-logo.png" alt="UPFC logo image">
            </div>
          </div>
        </div>
      <% } else { %>
        <div class="flex gap-x-12 text-white">
          <div class="flex flex-col w-1/2 justify-center items-center">
            <div class='flex flex-col gap-y-8 w-[58%] mb-16'>
              <span class='text-4xl font-medium'>¡GRACIAS POR REGISTRARTE!</span>
              <span class="font-thin tracking-wider">
                Recibiras un mail confirmando la aprobación de tu cuenta
              </span>
            </div>
          </div>
          <div class="w-1/2 overflow-hidden max-h-[calc(100vh-6rem)]">
            <div class="mt-12 -mr-24">
              <img class="w-full" src="/images/upfc-bg-logo.png" alt="UPFC logo image">
            </div>
          </div>
        </div>
    <% } %>
</div>

  <%-include("./../partials/footer")%>
</body>
</html>
